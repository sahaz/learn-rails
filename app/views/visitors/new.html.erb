<% content_for :title do %>Sahaz Bhattarai<% end %>
<% content_for :description do %>Website of Sahaz B.<% end %>
<section>
	<%= image_tag "a.jpg" %>
</section>
<section>
	<div class="column">
		<h2>Stay in touch.</h2>
	</div>
	
	<div class="column">
		<div class="form-centered">
			<%= simple_form_for @visitor do |f| %>
			<%= f.error_notification %>
			<%= f.input :email, label: false, :placeholder => 'Your email address here ...' %>
			<br/>
			<%= f.button :submit, "Sign up for the newsletter", :class => "submit" %>
			<% end %>
		</div>
	</div>
</section>